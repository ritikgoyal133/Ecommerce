<article>
<% if notice %>
<aside id="notice"><%= notice %></aside>
<% end %>
<div class="container">
  <h2 class="text-center">Jai Shree Radhey Krishna!</h2>

  <h2 class="text-center">Your Cart</h2>
    <div class="row">
      <div class="col-md-12">
        <table class="table table-striped table-hover table-bordered">
          <thead class="">
            <tr class="bg-success">
              <th>Name</th>
              <th>Quantity</th>
              <th>Unit_Price</th>
              <th>Price</th>
              <th>Action</th>
            </tr>
          </thead>
              <% @cart.line_items.each do |line_item| %>
                <tr>
                    <%# <%=image_tag(product.image_url) %>
                    <td>
                    <%= line_item.product.title %>
                  </td>
                   <td>
                   <%= line_item.quantity %>
                  </td>
                  <td>
                  <%= number_to_currency(line_item.unit_price)%>
                  </td>
                  <td>
                    <%= number_to_currency(line_item.total_price) %>
                  </td>
                  
                  <td>
                    <%# <%= button_to "Remover Item", @line_item, method: :delete ,  class: "btn btn-success"%> 
                      <%= link_to "Remove line item",  line_item_path(line_item), method: :delete, class: "btn btn-success" %>
                  </td>
                </tr>
              <%end%>
                <tr>
                  <td  colspan="2" class="text-center"> Total</td>
                  <td><%= number_to_currency(@cart.unit_price)%></td>
                  <td><%= number_to_currency(@cart.total_price) %></td>
                  </tr>
                 <tr colspan="2">
                  <%# <td></td> %>
                  <%# <td> <%= link_to "Back to store" %>
                  <%# <td><%= link_to "Checkout", new_order_path</td> %>
                  </tr>
                </tr>
        </table>
          <tr class="action">
                    <%= button_to 'Empty cart', @cart,
                    method: :delete, 
                    data: { confirm: 'Are you sure?' }, class: "btn btn-success btn-block" %>
                  </tr>
      </div>
    </div>
</div>