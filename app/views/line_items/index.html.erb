<%# <%= link_to "New line item", new_line_item_path %> 
<div class="container">
 <h2 class="text-center">Jai Shree Radhey Krishna!</h2>
 <h2 class="text-center">Your Cart</h2>
 <div class="row">
  <div class="col-md-12">
   <table class="table table-striped table-hover table-bordered">
    <thead class="">
     <tr class="bg-success">
      <th>Name</th>
      <th>Quantity</th>
      <th>Unit_Price</th>
      <th>Price</th>
      <th>Action</th>
     </tr>
    </thead>
    <% @line_items.each do |line_item| %>
      <tr>
        <td><%= line_item.product.title %></td>
        <td><%= line_item.quantity %></td>
        <td><%= number_to_currency(line_item.unit_price)%></td>
        <td><%= number_to_currency(line_item.total_price) %></td>
        <td><%= link_to "Show Item", line_item, class: "btn btn-success" %></td>
      </tr>
    <%end%>
   </table>
  </div>
 </div>
</div>